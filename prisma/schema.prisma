generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  name         String?
  phone        String?
  bio          String?
  driverMode   Boolean  @default(false)
  createdAt    DateTime @default(now())

  trips      Trip[]
  favorites  FavoriteTrip[]
}

model Trip {
  id                 String   @id @default(cuid())
  ownerId            String
  depart             String
  arrivee            String
  villeIntermediaire String?
  date               DateTime
  typeVehicule       String
  prixParPlace       Int
  placesDisponibles  Int
  createdAt          DateTime @default(now())

  owner     User        @relation(fields: [ownerId], references: [id])
  favorited FavoriteTrip[]
}

model FavoriteTrip {
  id     String @id @default(cuid())
  userId String
  tripId String

  user User @relation(fields: [userId], references: [id])
  trip Trip @relation(fields: [tripId], references: [id])

  @@unique([userId, tripId])
}

